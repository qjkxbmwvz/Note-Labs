<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MusicSheet">
    <TextView
        android:id="@+id/debugText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ScrollView
        android:id="@+id/musicSheetScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="100dp"
        android:clipToPadding="false"
        android:fillViewport="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/ToolbarLayout"
        android:layout_width="411dp"
        android:layout_height="100dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/playButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="@string/todo"
            android:onClick="play"
            app:srcCompat="@android:drawable/ic_media_play"
            tools:layout_editor_absoluteX="124dp"
            tools:layout_editor_absoluteY="514dp"/>

        <ImageButton
            android:id="@+id/restartButton"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/todo"
            android:onClick="restart"
            app:srcCompat="@android:drawable/ic_media_previous"/>

        <ImageButton
            android:id="@+id/undoButton"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/todo"
            android:onClick="undo"
            app:srcCompat="@android:drawable/ic_menu_revert"/>

        <!--<ImageButton
            android:id="@+id/addInstrumentButton"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/todo"
            app:srcCompat="@android:drawable/ic_menu_add"/>-->

        <ImageButton
            android:id="@+id/accidentButton"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/todo"
            android:onClick="cycleAccidental"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/natural"/>

        <ImageButton
            android:id="@+id/noteButton"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/todo"
            android:onClick="cycleNoteType"
            android:scaleType="fitCenter"
            android:visibility="gone"
            app:srcCompat="@drawable/quarternote"/>

        <ToggleButton
            android:id="@+id/dotButton"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="gone"
            android:text="."/>

        <ToggleButton
            android:id="@+id/restButton"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="gone"
            android:text="."/>

        <ImageButton
            android:id="@+id/saveButton"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/todo"
            android:onClick="save"
            android:scaleType="fitCenter"
            android:visibility="gone"
            app:srcCompat="@drawable/saveicon"/>

        <LinearLayout
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:layout_gravity="right">

            <ToggleButton
                android:id="@+id/editButton"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="TODO"
                android:onClick="cycleButtons"
                android:text="Switch"/>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>